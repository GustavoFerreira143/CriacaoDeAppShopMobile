<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:home="clr-namespace:RentShopVT.Views.Components.HomePage"
             x:Class="RentShopVT.Views.Components.HomePage.HomePage"
             BackgroundColor="#E2FDFF">

    <StackLayout>
        <ContentView  BackgroundColor="#3D4DDE">
            <Label
            Text="RentShopVT"
            TextColor="White"
            FontAttributes="Bold"
            FontSize="20"
            VerticalOptions="Center" 
            HorizontalOptions="Start"
            Margin="20,0,0,0"
            HeightRequest="40"
            />
        </ContentView>
        <ContentView>
            <Label 
            Text="Alugados Com FrequÃªncia"
            VerticalOptions="Center" 
            Margin="20,10,0,0"
            FontAttributes="Bold"
            FontSize="17"
            TextColor="Black"
            />
        </ContentView>

        <CarouselView IndicatorView="indicatorView" 
              ItemsSource="{Binding Items}" 
              WidthRequest="400" 
              HeightRequest="160"
              Margin="40,0,40,0">

            <CarouselView.ItemsSource>
                <x:Array Type="{x:Type home:CarrousselItem}">
                    <home:CarrousselItem ImageSource="projetor.png" Description="Projetor Multilaser R$20,90"/>
                    <home:CarrousselItem ImageSource="projetor.png" Description="Legenda 2"/>
                    <home:CarrousselItem ImageSource="projetor.png" Description="Legenda 3"/>
                </x:Array>
            </CarouselView.ItemsSource>

            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="10" HorizontalOptions="Center" HeightRequest="160" WidthRequest="200">
                        <!-- Imagem -->
                        <Image Source="{Binding ImageSource}" 
                       Aspect="AspectFill" 
                       HeightRequest="100" 
                       WidthRequest="100">
                            <Image.Clip>
                                <RoundRectangleGeometry Rect="0,0,100,100" CornerRadius="20"/>
                            </Image.Clip>
                        </Image>

                        <!-- Legenda -->
                        <Label Text="{Binding Description}" 
                       FontSize="15" 
                       FontAttributes="Bold" 
                       HeightRequest="50" 
                       HorizontalTextAlignment="Center" 
                       Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <IndicatorView x:Name="indicatorView" 
               HorizontalOptions="Center" 
               IndicatorColor="Gray" 
               SelectedIndicatorColor="Black"
               Margin="0,10,0,0"/>


    </StackLayout>

</ContentPage>